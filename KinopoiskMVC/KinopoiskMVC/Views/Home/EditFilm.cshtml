@using KinopoiskMVC.Core
@using KinopoiskMVC.Models.CheckBoxList
@model KinopoiskMVC.Models.ViewModels.ViewModelEditFilm

@{
    ViewBag.Title = "EditFilm";
}

<h2>EditFilm</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Film</legend>

        @Html.HiddenFor(model => model.Film.FilmID)

        <div class="editor-label">
            @Html.LabelFor(model => model.Film.OriginalTitile)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Film.OriginalTitile)
            @Html.ValidationMessageFor(model => model.Film.OriginalTitile)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Film.Title)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Film.Title)
            @Html.ValidationMessageFor(model => model.Film.Title)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Film.Year)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Film.Year)
            @Html.ValidationMessageFor(model => model.Film.Year)
        </div>
        
        
         @Html.Partial("~/Views/Partial/Controls/CheckBoxList.cshtml", new CheckBoxListModel()
        {
            Items = Model.Genres,
            SelectedItems = Model.SelectedGenres,
            Settings = new CheckBoxListSettings
                {
                    CblName = "SelectedGenres",
                    CblLayout = Layoutt.Table,
                    CblDirection = Direction.Horizontal,
                    CblRepeatColumns = RepeatColumns.ThreeColumns
                }
        })

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
